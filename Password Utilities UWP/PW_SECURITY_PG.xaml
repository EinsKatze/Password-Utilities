<Page
    x:Class="Password_Utilities_UWP.PW_SECURITY_PG"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Password_Utilities_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <PasswordBox x:Name="PW_INPUT" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="300" BorderBrush="White" PasswordChar="#" PlaceholderText="Password" Password="" ToolTipService.ToolTip="Please enter your password in this Box."/>
        <Button Content="Check Security" Margin="0,62,0,0" VerticalAlignment="Top" Width="300" Height="74" FontSize="24" HorizontalAlignment="Center" Click="Button_Click" ToolTipService.ToolTip="This Checks the Security of your password."/>
        <TextBlock x:Name="RATING_LBL" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Security Rating:" VerticalAlignment="Top" FontSize="24" Margin="0,156,0,0" ToolTipService.ToolTip="This is the Security Rating of your password."/>

    </Grid>
</Page>
